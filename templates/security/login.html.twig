{% extends 'base.html.twig' %}

{% block title %}Sign In - Slotify{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div class="text-center">
            <div class="text-6xl mb-4">ðŸŽ°</div>
            <h2 class="text-3xl font-bold text-white">Welcome Back</h2>
            <p class="mt-2 text-gray-400">Sign in to your Slotify account</p>
        </div>
        
        <div class="card p-8">
            <form method="post" class="space-y-6">
                {% if error %}
                    <div class="alert-error">
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="alert-success">
                        You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="text-cyan-400 hover:text-cyan-300">Logout</a>
                    </div>
                {% endif %}

                <div>
                    <label for="inputEmail" class="block text-sm font-medium text-gray-300 mb-2">Email Address</label>
                    <input type="email" 
                           value="{{ last_username }}" 
                           name="email" 
                           id="inputEmail" 
                           class="input-field w-full" 
                           autocomplete="email" 
                           required 
                           autofocus
                           placeholder="Enter your email">
                </div>

                <div>
                    <label for="inputPassword" class="block text-sm font-medium text-gray-300 mb-2">Password</label>
                    <input type="password" 
                           name="password" 
                           id="inputPassword" 
                           class="input-field w-full" 
                           autocomplete="current-password" 
                           required
                           placeholder="Enter your password">
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <div class="flex items-center">
                    <input type="checkbox" 
                           name="_remember_me" 
                           id="remember_me" 
                           class="h-4 w-4 text-cyan-500 focus:ring-cyan-500 border-gray-600 rounded bg-gray-700">
                    <label for="remember_me" class="ml-2 block text-sm text-gray-300">Remember me</label>
                </div>

                <button type="submit" class="btn-primary w-full">
                    ðŸŽ® Sign In
                </button>
            </form>
            
            <div class="mt-6 text-center">
                <p class="text-gray-400">
                    Don't have an account? 
                    <a href="{{ path('app_register') }}" class="text-cyan-400 hover:text-cyan-300 font-medium">Sign up here</a>
                </p>
            </div>
        </div>
    </div>
</div>
{% endblock %}
