{% extends 'base.html.twig' %}

{% block title %}Deposit Successful - {{ parent() }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="max-w-2xl mx-auto">
        <div class="bg-gray-800 rounded-lg shadow-xl p-8 text-center">
            <div class="mb-6">
                <div class="text-6xl mb-4">‚úÖ</div>
                <h1 class="text-3xl font-bold text-white mb-2">Deposit Successful!</h1>
                <p class="text-gray-400">Your account has been credited</p>
            </div>

            <div class="bg-gray-700 rounded-lg p-6 mb-8">
                <div class="grid grid-cols-2 gap-4 text-left">
                    <div>
                        <p class="text-sm text-gray-400">Amount Deposited</p>
                        <p class="text-xl font-bold text-green-400">${{ transaction.amount|number_format(2) }}</p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-400">Payment Method</p>
                        {% set method = transaction.paymentMethod %}
                        <p class="text-lg text-white">
                            {% if method == 'card' %}üí≥ Credit/Debit Card
                            {% elseif method == 'paypal' %}üÖøÔ∏è PayPal
                            {% else %}üîß Dummy Payment (Dev)
                            {% endif %}
                        </p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-400">Transaction ID</p>
                        <p class="text-sm font-mono text-gray-300">{{ transaction.referenceId }}</p>
                    </div>
                    <div>
                        <p class="text-sm text-gray-400">Processed At</p>
                        <p class="text-sm text-gray-300">{{ transaction.createdAt|date('M j, Y g:i A') }}</p>
                    </div>
                </div>
            </div>

            <div class="bg-cyan-900 border border-cyan-600 rounded-lg p-4 mb-8">
                <p class="text-sm text-cyan-200 mb-2">New Account Balance</p>
                <p class="text-3xl font-bold text-cyan-400">${{ transaction.balanceAfter|number_format(2) }}</p>
            </div>

            <div class="space-y-4">
                <a href="{{ path('app_home') }}" class="btn-primary inline-block">
                    Start Playing
                </a>
                <div>
                    <a href="{{ path('app_deposit') }}" class="text-cyan-400 hover:text-cyan-300 transition-colors mr-6">
                        Make Another Deposit
                    </a>
                    <a href="{{ path('app_deposit_history') }}" class="text-cyan-400 hover:text-cyan-300 transition-colors">
                        View History
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.btn-primary {
    @apply bg-cyan-600 hover:bg-cyan-700 text-white font-semibold py-3 px-6 rounded-lg transition-colors duration-200 focus:outline-none focus:ring-2 focus:ring-cyan-400 focus:ring-offset-2 focus:ring-offset-gray-900;
}
</style>
{% endblock %}